@import "../copy/copy3.styl"

.demand_cell
	display flex
	margin-top 10px
	background-color white
	height 50px
	padding 0px 15px
		
	.demand_cell_text
		flex 1
		line-height 50px
		font-size 14px
	.icon_circle
		display inline-block
		width 50px
		height 30px
		background-color #EA5404
		border-radius 25px
		margin-top 10px
		position relation
		.icon_circle-1
			position absolute
			z-index 5
			width 30px
			height 30px
			border-radius 50%
			background-color white
	.icon_right
		display inline-block
		width 55px 
		height 50px
		font-style normal
		line-height 50px
		color #B7B7B7
		font-size 12px
		background url(../../img/mine/content_list_right_icon@2x.png) no-repeat right 0px center 
		background-size 15%	
.bottom
	margin-top 10px
	background-color white
	height 50px	
	width 100%
	font-size 14px
	line-height 50px
	text-align center
.clear-box
	position absolute
	top 0px
	left 0px
	right 0px
	bottom 0px
	background-color rgba(167,167,170,0.5)
	
	.clear
		width 270px
		height 110px
		background white
		border-radius 10px
		overflow hidden
		position absolute
		left 50%
		margin-left -135px
		top 50%
		margin-top -80px
		.clear-top
			height 65px
			border-bottom 1px solid #EBEBEE
			text-align center
			line-height 65px
			font-size 14px
		.clear-bottom
			display flex
			width 100%
			height 50px
			line-height 50px
			font-size 16px
			.clear1
				flex 1
				display inline-block
				text-align center
				border-right 1px solid #EBEBEE
			.clear2
				flex 1
				display inline-block
				color #EA5404
				text-align center